{
    "env": {
        "browser": true,
        "es6": true,
        "es2022": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "overrides": [
        {
            "files": ["**/*.js", "**/*.jsx"]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4],
        "require-jsdoc": 0,
        "object-curly-spacing": ["error", "always"],
        "comma-dangle": ["error", {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "always-multiline",
            "exports": "always-multiline",
            "functions": "never"
        }]
    }
}
